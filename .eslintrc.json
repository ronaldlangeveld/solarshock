{
    "parser": "@typescript-eslint/parser",
    "plugins": ["ghost", "@typescript-eslint"],
    "extends": [
        "plugin:ghost/node",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
        {
            "files": ["test/**/*.ts"],
            "env": {
                "jest": true
            }
        }
    ],
    "ignorePatterns": ["node_modules/", "dist/", "build/"]
}